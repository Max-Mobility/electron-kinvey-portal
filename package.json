{
	"name": "electron-kinvey-portal",
	"productName": "Electron Kinvey Portal",
	"version": "0.0.1",
	"description": "Interface for interacting with data / files within Kinvey.",
	"license": "MIT",
	"repository": "max-mobility/electron-kinvey-portal",
	"author": {
		"name": "William Emfinger",
		"email": "waemfinger@gmail.com",
		"url": "https://permobilus.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
    "fix-lint": "xo --space --fix",
		"lint": "xo --space",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows",
		"release": "np"
	},
	"dependencies": {
		"d3": "^5.9.2",
		"electron-context-menu": "^0.12.1",
		"electron-debug": "^3.0.0",
		"electron-store": "^3.3.0",
		"electron-unhandled": "^2.2.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"jquery": "^3.4.1",
		"plotly.js": "^1.48.3"
	},
	"devDependencies": {
		"electron": "^5.0.4",
		"electron-builder": "^20.43.0",
		"np": "^5.0.3",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.permobil.electron.kinvey.portal",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
